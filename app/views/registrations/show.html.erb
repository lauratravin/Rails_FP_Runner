
<section class="show-registration">
<h1>Register</h1>

<h4>Race Name: <%= @race.name %></h4>
<h4>Miles: <%= @race.miles %></h4>
<h4>Date: <%= @race.date %></h4>

<h4>Runner <%= @user.name %>'s estimation time based on your pace: <%= @registration.estimated %> minutes </h4>

<%if !@registration.race.status %>
   <h3> <%= @registration.result %> </h3>
<% end %>


<% if is_admin?(session)%>
  <div class="link_to">
         <%= link_to "Add result", edit_user_registration_path(@user, @registration)%>
  </div>  
<% end %>
    <div class="link_to">
         <%= link_to "Back", user_path(@user)%>
   </div>  
</section>
