<div class="col50">
   <div class="comingraces">
           
                <h1>New Races coming soon!!</h1>
                

                <ul>
                <li> Date | Name</li>
                <% @activeraces.order(:date).each do |r|%> 
                 <li>   <%= r.date %> |
                        <%= r.name %>  
                </li>
                <% end %>
                </ul>
   </div>
