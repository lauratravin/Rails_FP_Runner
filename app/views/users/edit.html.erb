<h1> Edit User</h1>


<% if @user.errors.any? %>
 <div id="error_explanation">
   <h2>
     <%= pluralize(@user.errors.count, "error") %>
     prohibited this user from being saved:
   </h2>
 
   <ul>
   <% @user.errors.full_messages.each do |msg| %>
     <li><%= msg %></li>
   <% end %>
   </ul>
 </div>
<% end %>



<%= form_for @user do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %> <br>

    <%= f.label :dob %>
    <%= f.text_field :dob %><br>

    <%= f.label :pace%>
    <%= f.text_field :pace %><br>

    <%= f.label :email %>
    <%= f.text_field :email %><br>
   
  
    <%= f.submit "Update your profile" %>
<% end %>

<% if !is_admin?(session)%>
   <%= link_to "Back", user_path(current_user(session))%><br>
   <%= link_to "Console", admin_path%>
  <% else %>
  <%= link_to "User", users_path%>
  <% end %>